    "@types/react-dom": "^19.1.2",
    "autoprefixer": "^10.4.21",
    "drizzle-kit": "^0.30.6",
    "postcss": "^8.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "tailwindcss": "3.4",
    "typescript": "^5.8.3"
