    "drizzle-seed": "^0.3.1",
    "framer-motion": "12.6.3",
    "lucide-react": "^0.503.0",
    "next": "^15.3.1",
    "nodemailer": "^6.10.1",
    "pg": "^8.14.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.56.0",
    "react-icons": "^5.5.0",
    "react-use-measure": "^2.1.7",
    "recharts": "^2.15.3",
    "stripe": "17.7.0",
